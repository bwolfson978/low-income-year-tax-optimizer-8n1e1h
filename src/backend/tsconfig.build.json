{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.ts",
    "**/__mocks__/**",
    "**/__tests__/**",
    "coverage"
  ],
  "include": [
    "src/**/*.ts"
  ]
}