{
  "watch": ["src"],
  "ext": ".ts,.js",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts", 
    "tests/**/*",
    "coverage/**/*",
    "dist/**/*",
    "node_modules/**/*"
  ],
  "exec": "ts-node -r tsconfig-paths/register src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "verbose": true,
  "restartable": "rs",
  "delay": 1000
}