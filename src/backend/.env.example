NODE_ENV=development

# Server port number (default: 3000)
PORT=3000

# API version for routing (default: v1)
API_VERSION=v1

# Primary database URL with connection pooling
DATABASE_URL=postgresql://postgres:your-password@db.example.com:5432/tax_optimizer?pgbouncer=true

# Direct database URL for migrations
DIRECT_URL=postgresql://postgres:your-password@db.example.com:5432/tax_optimizer

# Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous key for client operations
SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase service key for admin operations
SUPABASE_SERVICE_KEY=your-supabase-service-key

# OpenAI API key for GPT-4 access
OPENAI_API_KEY=your-openai-api-key

# OpenAI organization ID
OPENAI_ORG_ID=your-openai-org-id

# Resend API key for email service
RESEND_API_KEY=your-resend-api-key

# Default sender email address
EMAIL_FROM_ADDRESS=noreply@taxoptimizer.com